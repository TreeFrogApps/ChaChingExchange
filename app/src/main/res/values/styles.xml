<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base">
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:actionBarSize">56dp</item>
        <item name="colorPrimary">@color/actionBarPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:spinnerItemStyle">@style/mySpinnerItemStyle</item>
        <item name="android:windowContentOverlay">@color/black</item>
    </style>




    <style name="AppTheme.Base.PopUpMenu.Overlay" parent="ThemeOverlay.AppCompat.Light" >
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="mySpinnerItemStyle" parent="">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_bigger</item>
    </style>


</resources>
